{
  "name": "readknows-frontend",
  "version": "2.4.262",
  "author": "ttbye",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/format-manifest.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "cap:sync": "npm run build && npx cap sync android",
    "cap:open": "npx cap open android",
    "cap:update-version": "node scripts/update-android-version.js",
    "cap:build": "npm run cap:update-version && npm run cap:sync && cd android && ./gradlew assembleDebug",
    "cap:build:release": "npm run cap:update-version && npm run cap:sync && cd android && ./gradlew assembleRelease",
    "cap:build:with-server": "npm run cap:update-version && VITE_API_URL=https://127.0.0.1:1281 npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "cap:build:release:with-server": "npm run cap:update-version && VITE_API_URL=https://127.0.0.1:1281 npm run build && npx cap sync android && cd android && ./gradlew assembleRelease"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "axios": "^1.6.2",
    "docx-preview": "^0.3.7",
    "epubjs": "^0.3.88",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.303.0",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-epub-viewer": "^0.2.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^16.5.0",
    "react-markdown": "^10.1.0",
    "react-pdf": "^10.2.0",
    "react-reader": "^2.0.15",
    "react-router-dom": "^6.21.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tesseract.js": "^7.0.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  },
  "optionalDependencies": {
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.21",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.0"
  }
}
